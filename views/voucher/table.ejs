<table class="table" id="table1">
  <thead>
    <tr>
      <th width="5%">No.</th>
      <th>Nama Voucher</th>
      <th>Kategori</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Thumbnail</th>
      <th width="15%">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0 ; i < vouchers.length; i++ ) {%>
    <tr>
      <td><%= i+1 %></td>
      <td><%= vouchers[i].name %></td>
      <td><%= vouchers[i]?.category?.name?? '-' %></td>
      <td>
        <% vouchers[i].nominals.forEach((item)=>{ %>
        <div class="badge bg-warning text-start">
          <%= item.coinName %> <%= item.coinQuantity %> <br />
          Rp.<%= item.price %>
        </div>
        <%}) %>
      </td>
      <td>
        <% if(vouchers[i].status == 'Y'){ %>
        <span class="badge bg-primary">Aktif</span>
        <%} else {%>
        <div class="badge bg-secondary">Non Aktif</div>
        <%}%>
      </td>
      <td>
        <img
          src="/images/<%= vouchers[i].thumbnail %>"
          width="100"
          class="img-thumbnail"
          alt=""
        />
      </td>
      <td>
        <a
          href="/voucher/change-status/<%= vouchers[i]._id %>"
          class="btn btn-sm btn-primary"
        >
          <% if(vouchers[i].status == 'N'){ %> Aktifkan <%} else {%> Non
          Aktifkan <%}%></a
        >
        <a
          href="/voucher/edit/<%= vouchers[i]._id %>"
          class="btn btn-sm btn-warning mt-1 ml-1"
          >Edit</a
        >
        <form
          action="/voucher/delete/<%= vouchers[i]._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger mt-1 ml-1">Hapus</button>
        </form>
      </td>
    </tr>
    <%}%>
  </tbody>
</table>
